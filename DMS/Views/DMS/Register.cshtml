@model DMS.Models.User

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Create a new account</h4>
<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Register" class="form-horizontal">
            
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="name" class="col-sm-2 control-label">Name</label>
                    <div class="col-sm-4">
                        <input asp-for="name" class="form-control" />
                    </div>
                <span asp-validation-for="name" class="text-danger"></span>
                
            </div>

            <div class="form-group">
                <label asp-for="role" class="col-sm-2 control-label">Role</label>
                    <div class="col-sm-4">
                        <input asp-for="role" class="form-control" />
                     </div>
                    <span asp-validation-for="role" class="text-danger"></span>
                </div>

            <div class="form-group">
                <label asp-for="location" class="col-sm-2 control-label">Location</label>
                    <div class="col-sm-4">
                        <input asp-for="location" class="form-control" />
                    </div>
                    <span asp-validation-for="location" class="text-danger"></span>
                </div>

            <div class="form-group">
                <label asp-for="username" class="col-sm-2 control-label">Username</label>
                    <div class="col-sm-4">
                        <input asp-for="username"  id="username" class="form-control"  onblur=CheckUserAvailability()/>
                    </div>
                    <span asp-validation-for="username" class="text-danger"></span>
                    <span id="userTaken" class="text-danger" hidden>Username already taken</span>
                </div>

            <div class="form-group">
                <label asp-for="password" class="col-sm-2 control-label">Password</label>
                    <div class="col-sm-4">
                        <input asp-for="password"  type="password" class="form-control" />
                    </div>
                    <span asp-validation-for="password" class="text-danger"></span>
                </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <input type="submit" id="RegisterButton" value="Register" class="btn btn-default"/>
                </div>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="LoginPage">Back</a>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
