@model DMS.Models.Device

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Update</h2>

<h4>Device</h4>
<hr />
<div class="row">
        <form asp-action="UpdateDevice" class="form-horizontal">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" name="id" value=@ViewBag.id>

            <div class="form-group">
                <label asp-for="name" class="col-sm-2 control-label"></label>
                <div class="col-sm-4">
                    <input asp-for="name" class="form-control" value=@ViewBag.name/>
                </div>
                <span asp-validation-for="name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="manufacturer" class="col-sm-2 control-label"></label>
                <div class="col-sm-4">
                    <input asp-for="manufacturer" class="form-control" value=@ViewBag.manufacturer/>
                </div>
                <span asp-validation-for="manufacturer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="type" class="col-sm-2 control-label"></label>
                <div class="col-sm-4">
                    @if (ViewBag.type == "Phone"){
                        <select asp-for="type" class="form-control">
                            <option value="Phone" selected>Phone</option>
                            <option value="Tablet">Tablet</option>
                        </select>
                    }
                    @if (ViewBag.type == "Tablet"){
                        <select asp-for="type" class="form-control">
                            <option value="Phone">Phone</option>
                            <option value="Tablet" selected>Tablet</option>
                        </select>
                     }
                </div>
                <span asp-validation-for="type" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="os" class="col-sm-2 control-label"></label>
                <div class="col-sm-4">
                    <input asp-for="os" class="form-control" value=@ViewBag.os/>
                </div>
                <span asp-validation-for="os" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="os_version" class="col-sm-2 control-label"></label>
                <div class="col-sm-4">
                    <input asp-for="os_version" class="form-control" value=@ViewBag.os_version/>
                </div>
                <span asp-validation-for="os_version" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="cpu" class="col-sm-2 control-label"></label>
                <div class="col-sm-4">
                    <input asp-for="cpu" class="form-control" value=@ViewBag.cpu/>
                </div>
                <span asp-validation-for="cpu" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ram" class="col-sm-2 control-label"></label>
                <div class="col-sm-4">
                    <input asp-for="ram" class="form-control" value=@ViewBag.ram/>
                </div>
                <span asp-validation-for="ram" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        </form>
    </div>

<div>
    <a asp-action="Home">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
