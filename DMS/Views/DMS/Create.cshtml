@model DMS.Models.Device

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add a new device</h2>
<hr />
<div class="row">
        <form asp-action="InsertDevice" class="form-horizontal">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="name" class="col-sm-2 control-label"></label>
                    <div class="col-sm-4">
                        <input asp-for="name" class="form-control" />
                     </div>
                <span asp-validation-for="name" class="text-danger"></span>
             </div>


            <div class="form-group">
                <label asp-for="manufacturer" class="col-sm-2 control-label"></label>
                    <div class="col-sm-4">
                        <input asp-for="manufacturer" class="form-control" />
                    </div>
                <span asp-validation-for="manufacturer" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="type" class="col-sm-2 control-label"></label>
                    <div class="col-sm-4">
                        <select asp-for="type" class="form-control">
                            <option value="Phone">Phone</option>
                            <option value="Tablet">Tablet</option>
                        </select>
                    </div>
                <span asp-validation-for="type" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="os" class="col-sm-2 control-label"></label>
                    <div class="col-sm-4">
                        <input asp-for="os" class="form-control" />
                     </div>
                 <span asp-validation-for="os" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="os_version" class="col-sm-2 control-label"></label>
                    <div class="col-sm-4">
                        <input asp-for="os_version" class="form-control" />
                     </div>
                <span asp-validation-for="os_version" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="cpu" class="col-sm-2 control-label"></label>
                    <div class="col-sm-4">
                        <input asp-for="cpu" class="form-control" />
                     </div>
                 <span asp-validation-for="cpu" class="text-danger"></span>
             </div>


            <div class="form-group">
                <label asp-for="ram" class="col-sm-2 control-label"></label>
                    <div class="col-sm-4">
                        <input asp-for="ram" class="form-control" />
                    </div>
                 <span asp-validation-for="ram" class="text-danger"></span>
             </div>

            <br />
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </form>
    </div>

<div>
    <a asp-action="Home">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
